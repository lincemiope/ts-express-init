    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "geolib": "^3.3.1",
    "https": "^1.0.0",
    "jwt-simple": "^0.5.6",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.5.0",
    "pg-promise": "^10.9.5",
    "ts-md5": "^1.2.7",
    "ws": "^7.4.4",
    "express-sse-ts": "^1.0.2",
    "handlebars-layouts": "^3.1.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
